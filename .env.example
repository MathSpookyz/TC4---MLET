# =========================
# Configuração de Armazenamento
# =========================

# Tipo de armazenamento: 'local' ou 's3'
STORAGE_TYPE=local

# Configurações S3 (apenas se STORAGE_TYPE=s3)
S3_BUCKET=teste-s3-dados-tickers
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-east-1

# =========================
# Configuração MLFlow
# =========================

# URI do servidor de tracking do MLFlow
# Pode ser: 
# - file:./mlruns (local)
# - http://mlflow-server:5000 (servidor remoto)
MLFLOW_TRACKING_URI=file:./mlruns

# Nome do experimento MLFlow
MLFLOW_EXPERIMENT_NAME=stock-price-prediction

# =========================
# Configuração da API
# =========================

# Porta da API (opcional)
API_PORT=8000

# Host da API (opcional)
API_HOST=0.0.0.0
